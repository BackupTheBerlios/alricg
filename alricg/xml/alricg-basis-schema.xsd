	<xsd:simpleType name="regionVolkTyp">
		<xsd:annotation>
			<xsd:documentation xml:lang="DE">
				GAR 	- garetien
				HOR, ART - horasreich
				ALB 	- albernien
				ALM 	- almada
				AND 	- andergast (+ Nostria)
				WEI, TOB, SVE - weiden
				ZYK 	- zyklopeninseln
				BOR 	- bornland
				THO 	- thorwal
				RIV   	- gjalskerland
				   		- fjarninger
				NIV 	- nivensen
					   	- norbarden
				MHA, KHU, RAS, GOR, THA - tulamidisch
				KHO		- wüsteKhom
				ARA		- aranien
						- ferkina
						- trollzacker
						- zahori
				WAL, CHA - waldmenschen
				ZWE 	- zwerge
				ORK 	- orks
						- goblins
				ACH		- achaz
				SHI, SKR, MAR - maraskan
				ELF, FIR - elfen
				ALA, BRA, MEN - südlicheStädte
				GAL, RHA, XER, GLO, ORO - schwarzeLande
				EHE 	 - ehernesSchwert
				
				schwarzeLande und ehernesSchwert sind KEINE angaben für sprachen, sondern für Waffen u.ä.
			</xsd:documentation>
		</xsd:annotation>
		<xsd:restriction base="xsd:string">
			<xsd:enumeration value="garetien"/>
